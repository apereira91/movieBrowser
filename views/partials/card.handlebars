<div class="col xs12 s6 m4">
  <div class="card" data-movieid="{{id}}">
    <div class="card-image">
      <img src="https://image.tmdb.org/t/p/w300_and_h450_bestv2/{{poster_path}}">
      <a class="btn-floating halfway-fab waves-effect waves-light rating">&nbsp;&nbsp;{{vote_average}}</a>
      <span class='card-badge card-badge--action'>{{genre_ids}}</span>
    </div>
    <div class="card-content">
      <span class="card-title">{{title}}</span>
    </div>
    <div class="card-action d-flex justify-content-center align-items-center">
      <a class="waves-effect waves-light btn green add-watchlist-btn"><i class="material-icons left">bookmark_border</i>Add to watchlist</a>
    </div>
  </div>
</div>