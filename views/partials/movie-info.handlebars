<div class='container movie-container'>
	<div class='row movie-info'>
		<div class='col s4 m4'>
			<img class='movie-info--image' src="https://image.tmdb.org/t/p/w300_and_h450_bestv2/{{backdrop_path}}">
		</div>
		<div class='col s8 m8 movie-info--data d-flex flex-column justify-content-between align-items-start'>
			<div class='movie-info--description'>
				<h2 class='movie-info--title'>{{original-title}}</h2>
				<p class='movie-info--tagline'>{{tagline}}</p>
				<div class='movie-info--control'>
					<div class='movie-info--rating d-flex justify-content-center align-items-center'>{{movie-rating}}</div>
					<a class="waves-effect waves-light btn green add-watchlist-btn"><i class="material-icons left">bookmark_border</i>Add to watchlist</a>
				</div>
				<p class='movie-info--overview'>{{overview}}</p>
				<div class='movie-info--genres'>
					<span>Genres:</span>
          {{#each genre}}
					<span class='genre-badge'>{{name}}</span>
          {{/each}}
				</div>
			</div>
			<div class='movie-info--stats d-flex justify-content-between align-items-center'>
				<div>
					<i class="fa fa-clock-o movie__icon" aria-hidden="true"></i>Release date: {{release-date}}
				</div>
				<div>
					<i class="fas fa-history movie__icon" aria-hidden="true"></i>Duration:  {{duration}}
				</div>
				<div>
					<i class="fa fa-money movie__icon" aria-hidden="true"></i>Budget:  {{budget}}
				</div>
			</div>
		</div>
	</div>
